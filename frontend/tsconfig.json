{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["vite/client"],
    "module": "ESNext",
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*", "global.d.ts"]
}
